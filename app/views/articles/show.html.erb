<div class="container mt-5">
    <div class="col-md-8 m-auto">

        <% if alert %>
          <div class="alert alert-info">
            <%= alert %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>

        <div class="media">   
          <div class="media-body">
            <h3 class="mt-0"><%= @article.title %></h3>
            <%= image_tag(@article.image, class: 'img-fluid') %>
            <div class="text-justify">
              <%= @article.text %>
            </div> <br />
            <% if user_signed_in? %>
              <%= link_to 'Edit Article', edit_article_path(@article), class: 'badge badge-warning float-right ml-1' %>
            <% end %>
            <div class="media mt-3">
              <div class="media-body">
                <%= render @article.comments %>
              </div>
            </div>
            <div class="media mt-3">
              <div class="media-body">
                <%= render 'comments/form' %>
              </div>
            </div>
            <%= link_to 'Back', articles_path, class: 'badge badge-secondary float-right mt-3' %>
          </div>
        </div>
    </div>
</div>